---
import About from '../components/About.astro';
import Navigation from '../components/Navigation.astro';
import Presentation from '../components/Presentation.astro';
import Projects from '../components/Projects.astro';
import Resume from '../components/Resume.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout title='Portfolio - Miguel Sierra'>
  <main
    class='p-0 md:p-20 lg:pr-5 lg:pl-5 xl:pl-20 xl:pr-20 bg-white max-h-full flex justify-start w-full flex-col lg:flex-row gap-10'
  >
    <Presentation />
    <section
      class='content-card z-20 animate-fade-down md:animate-fade-left animate-once animate-duration-500 animate-delay-200 flex m-auto lg:ml-auto lg:mr-0 flex-col mt-0 lg:w-[70%] w-11/12 h-full min-h-[1200px]'
    >
      <Navigation />
      <section id='content'>
        <Resume />
        <About />
        <Projects />
      </section>
    </section>
  </main>
  <div class="absolute z-20 md:hidden" onclick="window.scrollTo({ top: 0, behavior: 'smooth' });">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 cursor-pointer text-sky-500 dark:text-white fixed -right-1 bottom-1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l7.5-7.5 7.5 7.5m-15 6l7.5-7.5 7.5 7.5"></path>
    </svg>
  </div>
  <div class="relative z-10">
    <svg xmlns="http://www.w3.org/2000/svg" class="absolute bottom-0 [&>path]:fill-sky-500" viewBox="0 0 1440 320"><path fill="#0099ff" fill-opacity="1" d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
  </div>
</Layout>
